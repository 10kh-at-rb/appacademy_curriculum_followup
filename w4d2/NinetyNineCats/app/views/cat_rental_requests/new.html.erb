<h1> Cat Rental Request Form, It's a Form <h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="select-cat">Select Cat</label>
  <select name="cat_rental_request[cat_id]" id="select-cat">
      <option selected>  </option>
    <%= Cat.all.each do |cat| %>
      <option value=<%=cat.id%>> <%= cat.name %> </option>
    <% end %>
  </select><br>

  <label for="start-date">Start Date</label>
  <input type="date" id="start-date" name="cat_rental_request[start_date]" value=<%=@cat_rental_request.start_date%>><br>
  <label for="end-date">End Date</label>
  <input type="date" id="end-date" name="cat_rental_request[end_date]" value=<%=@cat_rental_request.end_date%>><br>

  <input type="Submit">

</form>

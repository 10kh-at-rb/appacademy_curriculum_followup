<h1> <%= @cat.name.capitalize %>'s Page</h1>

<ul>
<% Cat.columns.map(&:name).each do |col_name| %>
  <li> <%= col_name %>: <%= @cat.send(col_name.to_sym) %> </li>
<% end %>
</ul>

<ul>
  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
    <li>
      Start date: <%= request.start_date %>, End date: <%= request.end_date %>
      <%= button_to "Approve!", action: "/cat_rental_requests/#{requests.id}", method: "patch"%>
      <%= button_to "Deny!" %>
    </li>
  <% end %>
</ul>
